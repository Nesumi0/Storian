<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrador.AdminILActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_nameL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NombreLugar"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/nombreLogro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,LabelFor,VisualLintTextFieldSize,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txt_reseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reseña lugar"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/DescipcionLogro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="HardcodedText,LabelFor,VisualLintTextFieldSize,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa foto del lugar aqui" />

        <ImageView
            android:id="@+id/imageLugar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/upload"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/btn_addLogro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/btn_add"
            android:text="@string/btn_add"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>